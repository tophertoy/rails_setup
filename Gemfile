
group :development do
  # Standards and performance?
  gem 'bullet'
  gem 'rack-mini-profiler'
  gem 'rb-fsevent', '~> 0.9'
  gem 'brakeman'

  # Error reporting?
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'meta_request'

  # Debugging?
  gem 'pry'
  gem 'pry-stack_explorer'
  gem 'pry-remote'
  gem 'pry-debugger'
end

group :testing do
  # Testing?
  gem 'rspec-rails'
  gem 'cucumber-rails'

  # Automating
  gem 'guard-zeus'
  gem 'guard-rspec'
end

gem 'haml-rails'

